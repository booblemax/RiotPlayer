<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/pink_light</item>
    </style>

    <style name="Subtitle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlbumImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Progress">
        <item name="trackColorActive">@color/colorAccent</item>
        <item name="trackColorInactive">@color/pink_light</item>
        <item name="thumbColor">@color/colorAccent</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/pink_light</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="ExpandedText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedText" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>